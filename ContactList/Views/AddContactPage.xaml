<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactList.Views.AddContactPage"
             Title="Add Contact">
    <VerticalStackLayout Spacing="10" Margin="20">
        <Entry Placeholder="Name" Text="{Binding Name}" />
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
        <Entry Placeholder="Phone Number" Text="{Binding PhoneNumber}" Keyboard="Telephone" />
        <Entry Placeholder="Description" Text="{Binding Description}" />
        <Button Text="Save" Command="{Binding SaveContactCommand}" />
    </VerticalStackLayout>
</ContentPage>